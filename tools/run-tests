#! /bin/bash
set -e

abspath () {
	pushd "$1" > /dev/null
	local path=$(pwd)
	popd > /dev/null
	echo "${path}"
}


declare -r srcdir=$(abspath "${0%/*}/../")
declare -a tests=( )
declare -a fails=( )
declare -a okays=( )
declare -i current=0

for hi in "${srcdir}/test"/*.hi ; do
	name=${hi##*/}
	name=${name%.hi}
	tests=( "${tests[@]}" "${name}" )
done

declare -ir total=${#tests[@]}


for name in "${tests[@]}" ; do
	printf '[1G[K[%%%3i|+[1;32m%2i[0;0m|-[1;31m%2i[0;0m] %s ' \
		$(( 100 * ++current / total )) \
		${#okays[@]} \
		${#fails[@]} \
		"${name}"

	if "${srcdir}/tools/hipack-parse" "${srcdir}/test/${name}.hi" \
		2> "/tmp/hipack-$$-${name}.err" > /dev/null
	then
		okays=( "${okays[@]}" "${name}" )
	else
		fails=( "${fails[@]}" "${name}" )
		if [[ -s /tmp/hipack-$$-${name}.err ]] ; then
			cat "/tmp/hipack-$$-${name}.err"
			echo
		fi
	fi
	rm -f "/tmp/hipack-$$-${name}.err"
	sleep 1
done
echo

if [[ ${#fails[@]} -gt 0 ]] ; then
	echo "Failed tests:"
	for name in "${fails[@]}" ; do
		echo "  ${name}"
	done
fi
